{
  "scripts": {
    "postinstall": "component install",
    "test": "testem -f test/testem.json ci",
    "start": "testem -f test/testem.json",
    "build": "component build",
    "release": "component build --standalone Indexed && cp ./build/build.js ./dist/indexed.js",
    "stat": "cloc index.js lib/ --quiet && cloc test/*.js --quiet"
  },
  "devDependencies": {
    "component": "*",
    "testem": "*",
    "chai": "*",
    "async": "*",
    "underscore": "*"
  },
  "testling": {
    "preprocess" : "npm run build",
    "html" : "test/test-runner.html",
    "browsers": [
      "ie/6..latest",
      "firefox/3..5", "firefox/19..nightly",
      "chrome/4..7", "chrome/24..canary",
      "opera/10..next",
      "safari/4..latest",
      "iphone/6",
      "ipad/6"
    ]
  }
}